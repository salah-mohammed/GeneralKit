# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'GeneralKit' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for GeneralKit
pod 'SDWebImage','~> 4.4.2'  # download image
pod 'Alamofire', '~> 4.8'
pod 'AlamofireObjectMapper', '~> 5.0'
pod 'RealmSwift'
pod 'UIScrollView-InfiniteScroll', '~> 1.0.0'
pod 'SVProgressHUD'  # progress
pod 'Presentr'   # show view controller as alert
pod 'RxCocoa'#,'~> 5.0.1'
pod 'RxGesture', '~> 3.0.0'
pod 'RxWebKit'
pod 'Action'
pod 'RxViewController','~> 0.4.1'
pod 'RxRealm'
pod 'ObjectMapper'
pod 'ObjectMapper+Realm'
pod 'DateToolsSwift'
pod 'DateTools'
pod 'SwifterSwift'    # extensions

end

